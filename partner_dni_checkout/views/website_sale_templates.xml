<odoo>
    <template id="website_sale_checkout_dni" inherit_id="website_sale.checkout" name="Checkout DNI + Nome/Apl">
        <xpath expr="//div[@id='checkout']//div[hasclass('row')]//div[hasclass('col-lg-6') and hasclass('col-xl-7')]" position="inside">
            
            <div class="form-group mt-3">
                <label for="first_name">Nome</label>
                <input type="text" name="first_name" t-att-value="checkout.get('first_name')" class="form-control" required="required"/>
            </div>

            <div class="form-group mt-3">
                <label for="last_name">Apelido</label>
                <input type="text" name="last_name" t-att-value="checkout.get('last_name')" class="form-control" required="required"/>
            </div>

            <div class="form-group mt-3">
                <label for="dni">DNI</label>
                <input type="text" name="dni" t-att-value="checkout.get('dni')" class="form-control" required="required"/>
            </div>

            <t t-if="request.params.get('error') == 'missing_fields'">
                <div class="alert alert-danger mt-1">
                    Por favor, preencha Nome, Apelido e DNI/NIF.
                </div>
            </t>

        </xpath>
    </template>
</odoo>

