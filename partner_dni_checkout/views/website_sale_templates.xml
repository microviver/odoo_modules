<odoo>
  <template id="add_dni_to_checkout" inherit_id="website_sale.address">
    <xpath expr="//div[@id='o_wsale_address_form']//div[contains(@class,'form-group')][last()]" position="after">
      <div class="form-group col-lg-6 col-md-6 col-sm-12">
        <label for="dni">DNI / NIF / CPF</label>
        <input type="text" name="dni" t-att-value="partner.dni or ''" class="form-control"/>
      </div>
    </xpath>
  </template>
</odoo>

