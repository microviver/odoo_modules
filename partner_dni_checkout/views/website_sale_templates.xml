<odoo>
    <template id="add_custom_fields_to_checkout" inherit_id="website_sale.address">
        <xpath expr="//div[@id='div_name']" position="replace">
            <div id="div_name" class="col-lg-6 mb-2">
                <label for="name">Nome</label>
                <input type="text" name="name" id="o_name" class="form-control" required="required" t-att-value="checkout.get('name')"/>
            </div>
            <div id="div_last_name" class="col-lg-6 mb-2">
                <label for="last_name">Apelido</label>
                <input type="text" name="last_name" id="last_name" class="form-control" t-att-value="checkout.get('last_name')"/>
            </div>
        </xpath>

        <xpath expr="//div[@id='div_phone']" position="after">
            <div id="div_dni" class="col-lg-6 mb-2">
                <label for="dni">DNI/NIF</label>
                <input type="text" name="dni" id="dni" class="form-control" required="required" t-att-value="checkout.get('dni')"/>
            </div>
        </xpath>
    </template>
</odoo>
