<odoo>
    <template id="website_sale_address_inherit_dni" inherit_id="website_sale.address">
        <xpath expr="//div[@id='div_name']" position="before">
            <div id="div_first_name" class="form-group">
                <label for="first_name" class="form-label">
                    <span>Nome</span>
                </label>
                <input type="text" name="first_name" id="first_name"
                       t-att-value="partner.first_name or ''"
                       class="form-control" required="required"/>
            </div>
            <div id="div_last_name" class="form-group">
                <label for="last_name" class="form-label">
                    <span>Apelido</span>
                </label>
                <input type="text" name="last_name" id="last_name"
                       t-att-value="partner.last_name or ''"
                       class="form-control" required="required"/>
            </div>
        </xpath>

        <xpath expr="//div[@id='div_email']" position="before">
            <div id="div_dni" class="form-group">
                <label for="dni" class="form-label">
                    <span>DNI/NIF</span>
                </label>
                <input type="text" name="dni" id="dni"
                       t-att-value="partner.dni or ''"
                       class="form-control"/>
            </div>
        </xpath>
    </template>
</odoo>

