<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="sale_coupon_code_sequence" model="ir.sequence">
            <field name="name">Sale Coupon Code</field>
            <field name="code">sale.coupon.code</field>
            <field name="prefix">WELCOME-</field>
            <field name="padding">6</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <record id="newsletter_welcome_discount_program" model="sale.coupon.program">
            <field name="name">Newsletter Welcome Discount (5%)</field>
            <field name="promo_code_usage">coupon_code</field>
            <field name="discount_type">percentage</field>
            <field name="discount_percentage">5.0</field>
            <field name="discount_applicability">on_order</field>
            <field name="rule_minimum_amount_type">on_order</field>
            <field name="discount_max_amount">0.0</field>
            <field name="validity_duration">30</field>
            <field name="coupon_ids" eval="[(5, 0, 0)]"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>