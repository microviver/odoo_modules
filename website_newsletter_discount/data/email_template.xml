<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_welcome_discount" model="mail.template">
            <field name="name">Newsletter Welcome Discount Email</field>
            <field name="email_from">${object.company_id.email_formatted or user.email_formatted}</field>
            <field name="subject">🎁 O seu desconto de 5% está à sua espera!</field>
            <field name="email_to">${object.email}</field>
            <field name="model_id" ref="mass_mailing.model_mass_mailing_contact"/>
            <field name="body_html" type="html">
                <![CDATA[
                <div>
                    <p>Olá <t t-out="ctx.get('contact_name', '') or ''"></t>,</p>
                    <p>Obrigado por subscrever! Aqui está o seu código de desconto de 5%:</p>
                    <div>
                        <h2><t t-out="ctx.get('coupon_code', 'DESCONTO5')"></t></h2>
                    </div>
                    <p>Use-o durante o checkout!</p>
                </div>
                ]]>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>