<odoo>
  <template id="custom_website_address_fields" inherit_id="website_sale.address" priority="20">
    
    <!-- Substitui o label "Full Name" por "Nombre" -->
    <xpath expr="//label[@for='name']" position="replace">
      <label for="nombre">Nombre</label>
    </xpath>

    <!-- Substitui campo 'name' por 'nombre' + 'apelido' -->
    <xpath expr="//input[@name='name']" position="replace">
      <div class="form-group">
        <input type="text" name="nombre" class="form-control" placeholder="Nombre" required="1"/>
        <input type="text" name="apelido" class="form-control" placeholder="Apelido" required="1"/>
      </div>
    </xpath>

    <!-- Insere campo DNI antes de email -->
    <xpath expr="//label[@for='email']" position="before">
      <label for="dni">DNI</label>
      <input type="text" name="dni" class="form-control" placeholder="DNI" required="1"/>
    </xpath>

  </template>
</odoo>

