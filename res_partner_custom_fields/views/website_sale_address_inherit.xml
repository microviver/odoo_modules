
<odoo>
  <template id="custom_website_address_fields" inherit_id="website_sale.address" priority="30">
  <xpath expr="//form" position="before">
  <h1 style="color:red;">TESTE TEMPLATE APLICADO</h1>
</xpath>
    <!-- Campo Nombre -->
    <xpath expr="//div[label[@for='name']]" position="replace">
      <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" name="nombre" class="form-control" t-att-value="partner.nombre or ''" required="1"/>

        <label for="apellido">Apellido</label>
        <input type="text" name="apellido" class="form-control" t-att-value="partner.apellido or ''" required="1"/>
      </div>
    </xpath>

    <!-- Campo DNI antes do email -->
    <xpath expr="//div[label[@for='email']]" position="before">
      <div class="form-group">
        <label for="dni">DNI</label>
        <input type="text" name="dni" class="form-control" t-att-value="partner.dni or ''" required="1"/>
      </div>
    </xpath>

  </template>
</odoo>

