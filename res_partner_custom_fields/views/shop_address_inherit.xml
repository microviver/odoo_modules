<!-- views/shop_address_inherit.xml -->
<odoo>
  <template id="shop_address_dni_inherit" inherit_id="website_sale.address">
    <xpath expr="//div[@id='address_form']" position="inside">
      <div class="form-group col-lg-6">
        <label for="x_dni" class="form-label">DNI</label>
        <input type="text" name="x_dni" t-att-value="partner.x_dni or ''" class="form-control" required="required"/>
      </div>
    </xpath>
  </template>
</odoo>

