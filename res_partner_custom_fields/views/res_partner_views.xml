<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add DNI field to partner form view -->
    <record id="view_partner_form_dni" model="ir.ui.view">
        <field name="name">res.partner.form.dni</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="dni" placeholder="e.g. 12345678A"/>
            </field>
        </field>
    </record>
    
    <!-- Add DNI field to partner tree view -->
    <record id="view_partner_tree_dni" model="ir.ui.view">
        <field name="name">res.partner.tree.dni</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="email" position="after">
                <field name="dni" optional="show"/>
            </field>
        </field>
    </record>
</odoo>
