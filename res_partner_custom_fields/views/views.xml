<odoo>
    <!-- Adiciona campos ao checkout (já existe no seu código) -->
    <template id="custom_checkout_fields" inherit_id="website_sale.checkout_fields">
        <!-- Seu código atual -->
    </template>

    <!-- NOVO: Adiciona campos ao formulário de endereço (/shop/address) -->
    <template id="custom_address_fields" inherit_id="website_sale.address">
        <xpath expr="//div[@id='div_name']" position="after">
            <div id="div_nombre" class="col-lg-12 mb-2">
                <label class="col-form-label" for="nombre">Nome</label>
                <input type="text" name="nombre" class="form-control" t-att-value="partner.nombre" required="required"/>
            </div>
            <div id="div_apellido" class="col-lg-12 mb-2">
                <label class="col-form-label" for="apellido">Apelido</label>
                <input type="text" name="apellido" class="form-control" t-att-value="partner.apellido" required="required"/>
            </div>
            <div id="div_dni" class="col-lg-12 mb-2">
                <label class="col-form-label" for="dni">DNI</label>
                <input type="text" name="dni" class="form-control" t-att-value="partner.dni" required="required"/>
            </div>
        </xpath>
    </template>
</odoo>
