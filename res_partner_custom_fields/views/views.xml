<odoo>
    <template id="custom_address_fields" inherit_id="website_sale.address">
        <!-- Adiciona apÃ³s o campo name -->
        <xpath expr="//div[@id='div_name']" position="after">
            <!-- Campo Nombre -->
            <div id="div_nombre" class="col-lg-12 mb-2">
                <label class="col-form-label" for="nombre">Nombre</label>
                <input type="text" id="nombre" name="nombre" class="form-control" t-att-value="partner.nombre" required="required"/>
            </div>
            
            <!-- Campo Apellido -->
            <div id="div_apellido" class="col-lg-12 mb-2">
                <label class="col-form-label" for="apellido">Apellido</label>
                <input type="text" id="apellido" name="apellido" class="form-control" t-att-value="partner.apellido" required="required"/>
            </div>
            
            <!-- Campo DNI -->
            <div id="div_dni" class="col-lg-12 mb-2">
                <label class="col-form-label" for="dni">DNI</label>
                <input type="text" id="dni" name="dni" class="form-control" t-att-value="partner.dni" required="required"/>
            </div>
        </xpath>
    </template>
</odoo>
