<odoo>
    <template id="custom_checkout_fields" inherit_id="website_sale.checkout_fields">
        <xpath expr="//div[hasclass('o_wsale_website_form_separator_shippings')]" position="before">
            <div class="row s_website_form_row form-group">
                <label for="nombre" class="col-sm-auto col-form-label s_website_form_label">
                    <span class="s_website_form_label_content">Nome</span>
                    <span class="s_website_form_label_required text-danger">*</span>
                </label>
                <div class="col-sm">
                    <input type="text" name="nombre" class="form-control s_website_form_input" t-att-value="partner.nombre" required="True"/>
                </div>
            </div>
            <div class="row s_website_form_row form-group">
                <label for="apellido" class="col-sm-auto col-form-label s_website_form_label">
                    <span class="s_website_form_label_content">Apelido</span>
                    <span class="s_website_form_label_required text-danger">*</span>
                </label>
                <div class="col-sm">
                    <input type="text" name="apellido" class="form-control s_website_form_input" t-att-value="partner.apellido" required="True"/>
                </div>
            </div>
            <div class="row s_website_form_row form-group">
                <label for="dni" class="col-sm-auto col-form-label s_website_form_label">
                    <span class="s_website_form_label_content">DNI</span>
                    <span class="s_website_form_label_required text-danger">*</span>
                </label>
                <div class="col-sm">
                    <input type="text" name="dni" class="form-control s_website_form_input" t-att-value="partner.dni" required="True"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
