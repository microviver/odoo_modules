<odoo>
  <!-- Tree View -->
  <record id="view_popup_discount_code_tree" model="ir.ui.view">
    <field name="name">popup.discount.code.tree</field>
    <field name="model">popup.discount.code</field>
    <field name="arch" type="xml">
      <tree string="Códigos de Desconto">
        <field name="email"/>
        <field name="code"/>
        <field name="used"/>
      </tree>
    </field>
    <field name="type">tree</field>
  </record>

  <!-- Form View -->
  <record id="view_popup_discount_code_form" model="ir.ui.view">
    <field name="name">popup.discount.code.form</field>
    <field name="model">popup.discount.code</field>
    <field name="arch" type="xml">
      <form string="Código de Desconto">
        <sheet>
          <group>
            <field name="email"/>
            <field name="code"/>
            <field name="used"/>
          </group>
        </sheet>
      </form>
    </field>
    <field name="type">form</field>
  </record>

  <!-- Ação -->
  <record id="action_popup_discount_code" model="ir.actions.act_window">
    <field name="name">Códigos de Desconto</field>
    <field name="res_model">popup.discount.code</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Menus -->
  <menuitem id="menu_popup_discount_root" name="Descontos Popup" sequence="100"/>
  <menuitem id="menu_popup_discount_code" name="Códigos de Desconto" parent="menu_popup_discount_root" action="action_popup_discount_code"/>
</odoo>

