<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="custom_checkout_fields" inherit_id="website_sale.address" name="Custom Checkout Fields">

    <!-- Substitui o campo "name" por "Nombre" e "Apellidos" -->
    <xpath expr="//div[label[@for='name']]" position="replace">
      <div class="form-group col-lg-6">
        <label for="firstname" class="form-label">Nombre</label>
        <input type="text"
               id="firstname"
               name="firstname"
               t-att-value="partner.firstname or ''"
               class="form-control"
               required="required"/>
      </div>
      <div class="form-group col-lg-6">
        <label for="lastname" class="form-label">Apellidos</label>
        <input type="text"
               id="lastname"
               name="lastname"
               t-att-value="partner.lastname or ''"
               class="form-control"
               required="required"/>
      </div>
    </xpath>

    <!-- Inserir o campo DNI antes do campo email -->
    <xpath expr="//div[label[@for='email']]" position="before">
      <div class="form-group col-lg-6">
        <label for="dni" class="form-label">DNI</label>
        <input type="text"
               id="dni"
               name="dni"
               t-att-value="partner.dni or ''"
               class="form-control"
               required="required"/>
      </div>
    </xpath>

  </template>
</odoo>
