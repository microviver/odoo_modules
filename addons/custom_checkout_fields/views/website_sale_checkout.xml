<odoo>
  <template id="custom_checkout_fields" inherit_id="website_sale.address" priority="20">

    <!-- Substitui o campo 'name' por firstname + lastname -->
    <xpath expr="//input[@name='name']" position="replace">
      <div class="row">
        <div class="form-group col-lg-6">
          <label for="firstname" class="form-label">Nombre</label>
          <input type="text" name="firstname" class="form-control" required="required"/>
        </div>
        <div class="form-group col-lg-6">
          <label for="lastname" class="form-label">Apellidos</label>
          <input type="text" name="lastname" class="form-control" required="required"/>
        </div>
      </div>
    </xpath>

    <!-- Adiciona campo DNI antes do cÃ³digo postal -->
    <xpath expr="//input[@name='zip']" position="before">
      <div class="form-group col-lg-6">
        <label for="dni" class="form-label">DNI</label>
        <input type="text" name="dni" class="form-control" required="required"/>
      </div>
    </xpath>

  </template>
</odoo>
