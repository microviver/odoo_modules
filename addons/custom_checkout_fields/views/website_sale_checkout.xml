<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_checkout_fields" inherit_id="website_sale.address">
        <xpath expr="//div[label[@for='name']]" position="before">

            <!-- Firstname -->
            <div class="form-group col-lg-6 col-md-6">
                <label for="firstname" class="form-label">Nombre</label>
                <input type="text" id="firstname" name="firstname"
                       t-att-value="checkout_form.get('firstname')"
                       class="form-control" required="required"/>
            </div>

            <!-- Lastname -->
            <div class="form-group col-lg-6 col-md-6">
                <label for="lastname" class="form-label">Apellidos</label>
                <input type="text" id="lastname" name="lastname"
                       t-att-value="checkout_form.get('lastname')"
                       class="form-control" required="required"/>
            </div>

            <!-- DNI -->
            <div class="form-group col-lg-12 col-md-12">
                <label for="dni" class="form-label">DNI</label>
                <input type="text" id="dni" name="dni"
                       t-att-value="checkout_form.get('dni')"
                       class="form-control" required="required"/>
            </div>

        </xpath>
    </template>
</odoo>
