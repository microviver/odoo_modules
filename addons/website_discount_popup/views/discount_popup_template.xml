<odoo>
  <template id="popup_snippet" inherit_id="website.layout" priority="20">
    <xpath expr="//body" position="inside">
      <div id="discountPopup" style="display:none;">
        <h3>Quer um 5% de desconto?</h3>
        <p>Insira seu email para receber o desconto:</p>
        <input type="email" id="discountEmail" placeholder="Digite seu email..." />
        <button id="submitDiscountBtn">Enviar</button>
      </div>
    </xpath>
  </template>
</odoo>

